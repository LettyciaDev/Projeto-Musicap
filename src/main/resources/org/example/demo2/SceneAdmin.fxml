            </children>
         </VBox>

         <!-- Pane Exclusão -->
         <VBox fx:id="Pane_Delete" managed="false" spacing="10.0" visible="false">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
