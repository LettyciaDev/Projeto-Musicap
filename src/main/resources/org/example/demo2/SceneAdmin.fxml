               <Button onAction="#btnAdicionarUsuario" style="-fx-background-radius:12px; -fx-background-color: #fff" text="Adicionar" />
            </children>
         </VBox>

         <!-- Pane Adicionar Usuário -->
         <VBox fx:id="Pane_RemoverUsuario" managed="false" spacing="10.0" visible="false">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
               <Label text="E-mail do usuário" textFill="WHITE" style="-fx-font-family: 'Poppins SemiBold'; -fx-font-size: 12px" />
               <TextField fx:id="txt_remove_user" style="-fx-background-radius:12px;" />
               <Button onAction="#btnRemoverUsuario" style="-fx-background-radius:12px; -fx-background-color: #fff" text="Remover" />
