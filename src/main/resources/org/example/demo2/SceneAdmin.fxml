               <TextField fx:id="txt_artista" style="-fx-background-radius:12px;" />
               <Label text="Gênero" textFill="WHITE" style="-fx-font-family: 'Poppins SemiBold'; -fx-font-size: 12px" />
               <TextField fx:id="txt_gener" style="-fx-background-radius:12px;" />
               <Label text="Ano" textFill="WHITE" style="-fx-font-family: 'Poppins SemiBold'; -fx-font-size: 12px" />
               <TextField fx:id="txt_ano" style="-fx-background-radius:12px;" />
               <Button onAction="#btnAdicionarMusica" style="-fx-background-radius:12px; -fx-background-color: #fff" text="Adicionar" />
            </children>
         </VBox>

         <!-- Pane Editar Usuário -->
         <VBox fx:id="Pane_EditarUsuario" alignment="CENTER" managed="false" spacing="10.0" visible="false">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
               <Button onAction="#abrirAdicionar" prefWidth="200" style="-fx-background-radius:12px; -fx-background-color: #fff" text="Adicionar Usuário" />
               <Button onAction="#abrirRemover" prefWidth="200" style="-fx-background-radius:12px; -fx-background-color: #fff" text="Remover Usuário" />
            </children>
         </VBox>

         <!-- Pane Adicionar Usuário -->
