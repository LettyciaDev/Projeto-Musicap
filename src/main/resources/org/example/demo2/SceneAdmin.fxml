               <Button onAction="#btnRemoverMusica" style="-fx-background-radius:12px; -fx-background-color: #fff" text="Remover" />
            </children>
         </VBox>
   
                        <!-- Pane Cadastro -->
         <VBox fx:id="Pane_Create" spacing="10.0">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
               <Label text="Nome da Música" textFill="WHITE" style="-fx-font-family: 'Poppins SemiBold'; -fx-font-size: 12px" />
               <TextField fx:id="txt_nome_musc" style="-fx-background-radius:12px;" />
